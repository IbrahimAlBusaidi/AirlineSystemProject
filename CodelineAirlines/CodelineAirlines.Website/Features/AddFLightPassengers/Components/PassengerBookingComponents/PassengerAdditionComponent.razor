
@inject NavigationManager NavManager
<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6 fade-in-panel">
    <MudTabPanel Text="New Passenger">
        <CascadingValue Value="FlightNo">
            <CascadingValue Value="bookingState">
                <NewPassenger />
            </CascadingValue>
        </CascadingValue>
    </MudTabPanel>

    <MudTabPanel Text="Existing">
        <CascadingValue Value="FlightNo">
            <CascadingValue Value="bookingState">
                <ExistingPassengers />
            </CascadingValue>
        </CascadingValue>
    </MudTabPanel>
</MudTabs>

@code
{
    [CascadingParameter]
    public string FlightNo { get; set; }
    [CascadingParameter]
    public BookingState bookingState { get; set; }

    
    protected override void OnInitialized()
    {
        bookingState.PropertyChanged += (sender, e) => StateHasChanged();
    }
}