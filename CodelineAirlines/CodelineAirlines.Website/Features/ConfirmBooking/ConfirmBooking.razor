@page "/confirmBooking/{flightNo}"


@inject AppState appState


@attribute [Authorize(Roles = "user")]

<!-- 1) Carousel Section -->
<ConfirmBookingCarouselSection />

<!-- 2) Main Container -->
<CascadingValue Value="flightNo">
    <CascadingValue Value="appState">
        <BookingsSection/>
    </CascadingValue>
</CascadingValue>

@code {
    [Parameter]
    public string flightNo { get; set; }
}

